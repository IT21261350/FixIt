<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/pagebkg"
    tools:context=".Signup">

    <TextView
        android:id="@+id/cancel_button"
        android:layout_width="400dp"
        android:layout_height="20dp"
        android:drawableLeft="@drawable/baseline_cancel_24"
        android:padding="340dp"
        android:paddingBottom="10dp"
        android:translationY="12dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/lavender_border"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer"
                android:textAlignment="center"
                android:textColor="@color/lavender"
                android:textSize="36dp"
                android:textStyle="bold"
                android:translationY="-10dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="303dp"
                android:layout_height="223dp"
                android:textAlignment="center"
                android:translationY="-10dp"
                app:srcCompat="@drawable/propic2"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="74dp" />

            <EditText
                android:id="@+id/signup_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Name"
                android:padding="8dp"
                android:textColor="@color/black"
                android:translationY="-10dp" />

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="Email"
                android:padding="8dp"
                android:textColor="@color/black"
                android:translationY="-10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-9dp"
                android:paddingLeft="20dp"
                android:text="Select Gender"
                android:textColor="@color/lavender"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/worker_gender"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/lavender_border"
                android:entries="@array/gender"
                android:padding="15dp"
                android:textColor="@color/black"
                android:translationY="-10dp" />

            <EditText
                android:id="@+id/worker_age"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/lavender_border"
                android:hint="Age"
                android:padding="15dp"
                android:textColor="@color/black"
                android:translationY="-10dp" />

            <EditText
                android:id="@+id/worker_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/lavender_border"
                android:drawableLeft="@drawable/baseline_call_24"
                android:drawablePadding="8dp"
                android:hint="Number"
                android:padding="8dp"
                android:textColor="@color/black"
                android:translationY="-10dp" />

            <Button
                android:id="@+id/signup_button"
                android:layout_width="162dp"
                android:layout_height="50dp"
                android:text="Save"
                android:textSize="18sp"
                android:translationX="77dp"
                app:cornerRadius="20dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>